{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "declaration": true,
    "target": "ES2016",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2016"],
    "types": ["node"],
    "outDir": "dist"
  },
  "include": ["./lib/**/*.js", "./lib/types/**/*.d.ts", "./lib/**/*.ts"],
  "verbose": true
}
